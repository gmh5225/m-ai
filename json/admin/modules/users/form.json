{
    "inputs": {
        "name": {
            "type": "text",
            "label": "Họ tên",
            "required": "true",
            "placeholder": "Nhập họ tên"
        },
        "gender": {
            "type": "radio",
            "label": "Giới tính",
            "data": {
                "MALE": "Nam",
                "FEMALE": "Nữ",
                "OTHER": "Khác"
            },
            "default": "MALE"
        },
        "birthday": {
            "type": "dateselect",
            "label": "Sinh nhật",
            "template": "date",
            "placeholder": "Nhập ngày sinh",
            "@year-params": [
                "vi",
                "current",
                -70
            ]
        },
        "email": {
            "type": "email",
            "label": "Địa chỉ E-mail",
            "required": "true",
            "prepend_text": "<i class=\"fa fa-envelope\"></i>"
        },
        "username": {
            "type": "text",
            "label": "Tên đăng nhập",
            "required": "true",
            "prepend_text": "<i class=\"fa fa-user\"></i>"
        },
        "password": {
            "type": "password",
            "label": "Mật khẩu",
            "placeholder": "Nhập mật khẩu",
            "autocomplete": "off",
            "prepend_text": "<i class=\"fa fa-key\"></i>",
            "show_required": true
        },
        "password_confirmation": {
            "type": "password",
            "label": "Mật khẩu xác nhận",
            "placeholder": "Nhập lại mật khẩu",
            "prepend_text": "<i class=\"fa fa-key\"></i>"
        },
        "phone_number": {
            "type": "text",
            "label": "Số  điện thoại",
            "prepend_text": "<i class=\"fa fa-phone\"></i>"
        },
        "avatar": {
            "type": "file",
            "label": "Hình đại diện",
            "template": "cropit",
            "data-width": 400,
            "data-height": 400
        },
        "type": {
            "type": "crazyselect",
            "label": "Loại user",
            "required": "true",
            "call": "get_user_type_options"
        },
        "affiliate_code": {
            "type": "text",
            "label": "Affiliate Code",
            "required": "true",
            "placeholder": "Nhập Affiliate Code"
        },
        "ref_code": {
            "type": "text",
            "label": "Ref Code",
            "placeholder": "Nhập Ref Code"
        },
        "wallet_balance": {
            "type": "number",
            "label": "Số dư trong ví",
            "min": 0,
            "step": 0.01
        },
        "agent_discount": {
            "type": "number",
            "label": "Chiết khấu",
            "min": 0,
            "step": 0.01,
            "max": 100.00,
            "append_text": "%"
        },
        "agent_expired_at": {
            "type": "time",
            "text": "Hạn hợp đồng",
            "placeholder": "Nhập Hạn hợp đồng",
            "data-format": "yyyy-mm-dd hh:ii:ss"
        },
        "upload_count": {
            "type": "number",
            "label": "Số lượt tải lên",
            "min": 0,
            "step": 1
        },
        "bank_name": {
            "type": "text",
            "label": "Tên ngân hàng",
            "placeholder": "Nhập tên ngân hàng"
        },
        "bank_account_name": {
            "type": "text",
            "label": "Chủ tài khoản ngân hàng",
            "placeholder": "Nhập tên chủ tài khoãn"
        },
        "bank_account_number": {
            "type": "text",
            "label": "Số tài khoản",
            "placeholder": "Nhập Số tài khoản"
        },
        "reason": {
            "type": "textarea",
            "label": "Lý do",
            "placeholder": "Nhập Lý do"
        },
        "country_code": {
            "type": "crazyselect",
            "label": "Mã Quốc gia",
            "className": "d-block",
            "call": "get_country_options",
            "params": [
                [],
                "Chọn mã quốc gia",
                "code",
                "name"
            ],
            "@change": "App.location.changeCountryCode"
        },
        "locale": {
            "type": "crazyselect",
            "label": "Ngôn ngữ",
            "className": "d-block",
            "data": {
                "vi": "Tiếng Việt",
                "en": "Tiếng Anh"
            }
        },
        "mbti": {
            "type": "crazyselect",
            "label": "MBTI",
            "className": "d-block",
            "call": "get_mbti_options",
            "params": [
                [],
                null,
                "mbti",
                "mbti"
            ]
        },
        "bio": {
            "type": "textarea",
            "label": "Mô tả",
            "placeholder": "Nhập mô tả..."
        },
        "status": {
            "type": "radio",
            "label": "Trạng thái",
            "required": "true",
            "func": "get_user_config",
            "params": [
                "status_list"
            ],
            "template": "deepselect"
        },
        "region_id": {
            "type": "crazyselect",
            "label": "Tỉnh / Thành phố",
            "className": "d-block",
            "call": "get_region_options",
            "@change": "App.location.changeRegionID"
        },
        "district_id": {
            "type": "crazyselect",
            "label": "Quận / huyện",
            "className": "d-block",
            "call": "get_district_options",
            "params": [
                {
                    "region_id": "#region_id|0"
                }
            ],
            "@change": "App.schools.changeDistrictID"
        },
        "ward_id": {
            "type": "crazyselect",
            "label": "Xã / phường",
            "className": "d-block",
            "call": "get_ward_options",
            "params": [
                {
                    "district_id": "#district_id|0"
                }
            ],
            "@change": "App.schools.changeWardID"
        },
        "address": {
            "type": "text",
            "label": "Địa chỉ",
            "placeholder": "Nhập địa chỉ..."
        },
        "agent_policy_id": {
            "type": "select",
            "label": "Chính sách cho đại lý",
            "call": "get_agent_policy_options"
        },
        "is_verified_phone_number": {
            "type": "switch",
            "label": "Xác thực SĐT",
            "check_label": "Đã xác thực"
        },
        "is_verified_email": {
            "type": "switch",
            "label": "Xác thực Email",
            "check_label": "Đã xác thực"
        },
        "is_verified_identity": {
            "type": "switch",
            "label": "Xác thực CCCD",
            "check_label": "Đã xác thực"
        }
    },
    "config": {
        "name": "Th\u00f4ng tin ng\u01b0\u1eddi d\u00f9ng",
        "layout_type": "column",
        "form_groups": [
            {
                "title": "Th\u00f4ng tin c\u00e1 nh\u00e2n",
                "class": "col-md-6",
                "inputs": [
                    "name",
                    "gender",
                    "birthday",
                    "email",
                    "phone_number"
                ]
            },
            {
                "class": "col-md-6",
                "inputs": [
                    "avatar",
                    "status"
                ]
            },
            {
                "title": "Th\u00f4ng tin t\u00e0i kho\u1ea3n",
                "class": "col-md-6",
                "inputs": [
                    "username",
                    "password",
                    "password_confirmation"
                ]
            },
            {
                "class": "col-md-6",
                "inputs": [

                    "type",
                    "agent_policy_id",
                    "affiliate_code",
                    "ref_code"
                ]
            }
        ],
        "assets": {
            "js": [],
            "css": []
        }
    }
}
