{
    "name": "Đơn đăng ký",
    "package": "users.cover-letters",
    "use_trash": false,
    "can_edit": false,
    "can_create": false,
    "titles": {
        "default": "Danh sách Đơn đăng ký",
        "trash": "Danh sách Đơn đăng ký đã xóa"
    },
    "data": {

        "status": {
            "1": "Duyệt",
            "0": "Chờ duyệt",
            "-1": "Từ chối"
        },
        "levels": {
            "0": ""
        }
    },
    "filter": {
        "general_columns": {
            "name": "Họ Tên",
            "email": "Email"
        },
        "search_columns": {
            "username": "Username"
        },

        "sort_columns": {
            "created_at": "Thời gian khổi tạo"
        }
    },
    "table": {
        "class": "",
        "columns": [
            {
                "type": "order",
                "title": "STT",
                "class": "id-col",
                "order": 1
            },
            {
                "title": "Họ tên",
                "class": "min-120 max-200",
                "text":"name"
            },
            {
                "title": "Email",
                "class": "min-150",
                "text": ":email"
            },
            {
                "title": "Số ĐT",
                "class": "min-120 text-center",
                "text": ":phone_number"
            },
            {
                "title": "Message",
                "class": "",
                "text": ":message"
            },
            {
                "title": "Trạng thái",
                "class": "min-100 text-center",
                "template": "<div class=\"\">{@html_input}</div>",
                "data": {
                    "@html_input": [
                        {
                            "type": "select",
                            "name": "cover[{id}][status]",
                            "lanel": "Trạng thái",
                            "value": ":status",
                            "data": "@data:status",
                            "class": "form-control-sm m-input cover-letter-status-select",
                            "data-id": ":id"
                        }
                    ]
                }
            }
        ]
    },
    "resources": {
        "js_data": [],
        "js": [
            "/static/features/users/cover-letter.js"
        ],
        "css": []
    },
    "includes": {}
}
