{
    "inputs": {
        "name": {
            "type": "text",
            "label": "Tên prompt",
            "placeholder": "Nhập tên prompt",
            "required": "true"
        },
        "prompt": {
            "type": "ai-prompt",
            "label": "Prompt",
            "placeholder": "Nhập Prompt"
        },
        "topic_id": {
            "type": "crazyselect",
            "label": "Danh mục",
            "required": "true",
            "call": "get_topic_options",
            "@label-type": "header",
            "@change": "Prompts.form.changeCategory"
        },
        "description": {
            "type": "textarea",
            "label": "Mô tả",
            "placeholder": "Nhập mô tả"
        }

    },
    "config": {
        "name": "Prompt",
        "layout_type": "column",
        "form_groups": {
            "__": {
                "title": "",
                "class": "col-md-12",
                "inputs": [
                    "name",
                    "prompt",
                    "topic_id",
                    "description"
                ]
            }
        }
    }
}
