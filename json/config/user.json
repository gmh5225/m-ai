{
    "type_list": {
        "user": "Người người phổ thông",
        "agent_lv1": "Đại lý cấp 1",
        "agent_lv2": "Đại lý cấp 2",
        "admin": "Người quản trị hệ thống"
    },
    "agent_type": {
        "agent_lv1": "Đại lý cấp 1",
        "agent_lv2": "Đại lý cấp 2"
    },
    "status_list": {
        "1": "Kích hoạt",
        "0": "Chờ xác minh",
        "-1": "Bị khóa",
        "-2": "Cấm vĩnh viễn"
    },
    "account_settings": {
        "general": {
            "title": "Cập nhật Thông tin cá nhân",
            "slug": "thong-tin-ca-nhan",
            "inputs": {
                "name": {
                    "type": "text",
                    "text": "Họ và tên",
                    "required": "true",
                    "placeholder": "Tên",
                    "prepend_group": [
                        "last_name"
                    ]
                },
                "gender": {
                    "type": "radio",
                    "label": "Giới tính",
                    "required": "true",
                    "data": {
                        "male": "Nam",
                        "female": "Nữ",
                        "other": "Khác"
                    },
                    "default": "male"
                },
                "birthday": {
                    "type": "dateselect",
                    "text": "Sinh nhật",
                    "required": "true",
                    "template": "date",
                    "placeholder": "Nhập ngày sinh",
                    "@year-params": [
                        "vi",
                        "current",
                        -70
                    ]
                }
            }
        },

        "account": {
            "title": "Thông tin Đăng nhập",
            "slug": "thong-tin-dang-nhap",
            "inputs": {
                "username": {
                    "type": "text",
                    "text": "Tên đăng nhập",
                    "required": "true",
                    "prepend_text": "<i class=\"fa fa-user\"></i>"
                },
                "phone_number": {
                    "type": "text",
                    "text": "Số diện thoại",
                    "placeholder": "Nhập số điện thoại",
                    "append_text": "<i class=\"fa fa-phone\"></i>"
                },
                "email": {
                    "type": "email",
                    "text": "Địa chỉ E-mail",
                    "required": "true",
                    "placeholder": "Nhập email",
                    "append_text": "<i class=\"fa fa-envelope\"></i>"
                },
                "current_password": {
                    "type": "password",
                    "text": "Mật khẩu hiện tại",
                    "placeholder": "Nhập mật khẩu hiện tại",
                    "prepend_text": "<i class=\"fa fa-key\"></i>"
                }
            }
        },
        "password": {
            "title": "Đổi mật khẩu",
            "slug": "doi-mat-khau",
            "inputs": {
                "current_password": {
                    "type": "password",
                    "text": "Mật khẩu hiện tại",
                    "placeholder": "Nhập mật khẩu hiện tại",
                    "prepend_text": "<i class=\"fa fa-key\"></i>",
                    "@inputonly": true
                },
                "password": {
                    "type": "password",
                    "text": "Mật khẩu mới",
                    "placeholder": "Nhập mật khẩu mới",
                    "prepend_text": "<i class=\"fa fa-key\"></i>",
                    "@inputonly": true
                },
                "password_confirmation": {
                    "type": "password",
                    "text": "Mật khẩu xác nhận",
                    "placeholder": "Nhập lại mật khẩu",
                    "prepend_text": "<i class=\"fa fa-key\"></i>",
                    "@inputonly": true
                }
            }
        }
    },
    "account_setting_tabs": {
        "thong-tin-ca-nhan": "general",
        "thong-tin-dang-nhap": "account",

        "doi-mat-khau": "password"
    }
}
